<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/fragment1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fragment1"
            android:layout_toLeftOf="@+id/fragment2_tv"
            android:layout_marginRight="20dp"
            ></TextView>

        <TextView
            android:id="@+id/fragment2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fragment2"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"></TextView>

        <TextView
            android:id="@+id/fragment3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fragment3"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/fragment2_tv"
            ></TextView>
    </RelativeLayout>

    <EditText
        android:id="@+id/fragement2_email_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:layout_marginTop="190dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:background="@color/white"/>


    <EditText
        android:id="@+id/fragement2_name_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:background="@color/white"/>

    <Button
        android:id="@+id/send_data_to_next_fragement_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data to next Fragement"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>


</LinearLayout>